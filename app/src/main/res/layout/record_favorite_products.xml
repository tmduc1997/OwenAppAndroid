<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:outlineSpotShadowColor="#000"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="@drawable/frame_suggest"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="100">
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/frame_suggest"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/img_same_cate_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/txt_same_cate_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vcvhgvghvsghvs"
                    android:textSize="18sp"
                    android:textColor="#000">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/txt_same_cate_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vcvhgvghvsghvs"
                    android:textSize="15sp"
                    android:textColor="#ce2823">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>