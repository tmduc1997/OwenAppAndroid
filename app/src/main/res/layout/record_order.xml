<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:outlineSpotShadowColor="#000"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/frame_suggest"
        android:weightSum="100">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/order_img_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/delivery"></com.airbnb.lottie.LottieAnimationView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:weightSum="100">
            //date
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textSize="14sp"
                    android:textColor="#000">
                </TextView>
                <TextView
                    android:id="@+id/txt_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000">
                </TextView>
            </LinearLayout>
            //shipped date
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped date: "
                    android:textSize="14sp"
                    android:textColor="#000">
                </TextView>
                <TextView
                    android:id="@+id/txt_order_shipped_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000">
                </TextView>
            </LinearLayout>
            //number code
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Code: "
                    android:textSize="14sp"
                    android:textColor="#000">
                </TextView>
                <TextView
                    android:id="@+id/txt_order_number_code"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#ce2823">
                </TextView>
            </LinearLayout>
            //state
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State: "
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/txt_order_state"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#ce2823">
                </TextView>
            </LinearLayout>
            //detail
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:weightSum="10">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <ImageView
                        android:id="@+id/img_order_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/trash">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <Button
                        android:id="@+id/btn_order_detail"
                        android:drawableRight="@drawable/ic_add_black_24dp"
                        android:background="@drawable/button_detail_green"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        android:text="Detail">
                    </Button>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>