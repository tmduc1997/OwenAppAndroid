<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:outlineSpotShadowColor="#000"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/frame_suggest"
        android:weightSum="100">
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/img_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                app:cardCornerRadius="20dp"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:weightSum="100">
            //name
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">
                <TextView
                    android:id="@+id/txt_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dbdhcbjhdshdhhjs"
                    android:textSize="18sp"
                    android:textColor="#000">
                </TextView>
            </LinearLayout>
            //price
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:id="@+id/txt_card_price"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150,000"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#ce2823">
                </TextView>
            </LinearLayout>
            //total
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:id="@+id/txt_card_total"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300,000"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#ce2823">
                </TextView>
            </LinearLayout>
            //edit
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classify:"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:id="@+id/txt_card_classify"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One size"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textColor="#ce2823">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <ImageView
                        android:id="@+id/img_card_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/trash">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <ImageView
                android:id="@+id/img_card_minus"
                android:layout_margin="5dp"
                android:src="@drawable/minus"
                android:layout_width="20dp"
                android:layout_height="20dp">
            </ImageView>
            <TextView
                android:id="@+id/txt_card_quantity"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#000">
            </TextView>
            <ImageView
                android:id="@+id/img_card_plus"
                android:layout_margin="5dp"
                android:src="@drawable/plus"
                android:layout_width="20dp"
                android:layout_height="20dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>